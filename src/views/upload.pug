extends base

block content 
    if errorMessage 
        span=errorMessage 

    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="Title", name="title", required, type="text", maxlength=80)
        input(type="text", placeholder="Description", name="description", required, minlength=20)
        input(type="text", placeholder="Hashtags, separated by comma", name="hashtags", required)
        input(type="submit", value="Upload Video")